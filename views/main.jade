        script(src='/semantic/dist/components/sidebar.js')
        script(src='/semantic/dist/components/transition.js')

        script.
            function toIndex(){
                window.location.pathname = '/index';
            }
    body
        // Page Contents
        .pusher(style="height: 100%")
            .ui.segment(style="height: 80%; margin: 0; padding: 0; background-color: white")
                .ui(style="height: 10%; background-color: black")
                    h2.ui.inverted(style="color: white; padding-top: 15px; margin-left: 40px")
                        i.icon.wikipedia
                        |  MiniWiki
                .ui.text.container(style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); width: 100%; text-align: center")
                    h1.ui.header(style="font-size: 4em")
                        | Welcome to MiniWiki
                    h3(style="font-size: 1.7em") Search whatever you want when you want to.
                    .ui.huge.primary.button(onclick="toIndex()")
                        | Get Started
                        i.right.arrow.icon

            .ui.vertical.footer.segment(style="height: 20%; background-color: black")
                .ui.container
                    .ui.stackable.inverted.divided.equal.height.stackable.grid
                        .three.wide.column
                            h4.ui.inverted.header About
                            .ui.inverted.link.list
                                a.item(href='https://github.com/Accelerator66') Github
                        .three.wide.column
                            h4.ui.inverted.header Frameworks
                            .ui.inverted.link.list
                                a.item(href='http://hadoop.apache.org/') Apache Hadoop
                                a.item(href='https://nodejs.org/en/') NodeJS
                                a.item(href='https://semantic-ui.com/') Semantic UI
